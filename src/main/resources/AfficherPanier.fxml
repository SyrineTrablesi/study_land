<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="701.0" prefWidth="891.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherPanierController">
   <children>
      <!-- TableView pour afficher le contenu du panier -->
      <TableView fx:id="tableViewPanier" layoutX="46.0" layoutY="42.0" prefHeight="554.0" prefWidth="798.0">
         <columns>
            <TableColumn text="ID Panier" fx:id="columnIdPanier" prefWidth="100" />
            <TableColumn text="ID Utilisateur" fx:id="columnIdUser" prefWidth="100" />
            <TableColumn text="ID Formation" fx:id="columnIdFormation" prefWidth="100" />
            <TableColumn text="Date Ajout" fx:id="columnDateAjout" prefWidth="100" />
            <TableColumn text="Type Formation" fx:id="columnTypeFormation" prefWidth="100" />
            <TableColumn prefWidth="100">
               <graphic>
                  <Button text="Modifier" onAction="#modifierLigne" />
               </graphic>
            </TableColumn>
            <TableColumn prefWidth="100">
               <graphic>
                  <Button text="Supprimer" onAction="#supprimerLigne" />
               </graphic>
            </TableColumn>
         </columns>
      </TableView>
      <!-- Bouton "Home" pour retourner Ã  l'interface d'ajout de panier -->
      <Button layoutX="600.0" layoutY="600.0" mnemonicParsing="false" onAction="#retournerAInterfaceAjout" text="Home" />
   </children>
</AnchorPane>