         <Button layoutX="10.0" layoutY="618.0" onAction="#showFavorisPage" text="Next" />
      </children>
   </AnchorPane>

   <!-- Favoris -->
   <AnchorPane fx:id="favorisAnchorPane" prefHeight="664.0" prefWidth="838.0" styleClass="custom-card" stylesheets="@style/card.css" visible="false">
      <children>
         <Label layoutX="2.0" layoutY="1.0" prefHeight="30.0" prefWidth="835.0" text="Favoris" textFill="#2f2b6d">
            <font>
               <Font name="Century" size="23.0" />
            </font>
         </Label>
         <Label layoutX="14.0" layoutY="29.0" prefHeight="30.0" prefWidth="199.0" text="Liste des favoris" textFill="#f79125">
            <font>
               <Font name="Cambria Bold" size="13.0" />
            </font>
         </Label>
         <Line endX="716.2000732421875" endY="-7.62939453125E-6" layoutX="111.0" layoutY="67.0" startX="-100.0" stroke="#43a1f6" />
         <VBox fx:id="idListeFavoris" layoutX="8.0" layoutY="69.0" prefHeight="534.0" prefWidth="823.0" style="-fx-background-color: ECECFE;">
            <children>
               <FlowPane fx:id="id_favoris" prefHeight="537.0" prefWidth="823.0" style="-fx-background-color: D6D6FA;" />
            </children>
         </VBox>
         <!-- Bouton pour retourner à la page Panier -->
         <Button layoutX="10" layoutY="617.0" onAction="#showPanierPage" prefHeight="9.0" prefWidth="61.0" text="Previous" />
      </children>
   </AnchorPane>

</AnchorPane>
