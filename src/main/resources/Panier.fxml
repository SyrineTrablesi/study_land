<AnchorPane prefHeight="664.0" prefWidth="856.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PanierController">

   <!-- Panier -->
   <AnchorPane fx:id="panierAnchorPane" prefHeight="642.0" prefWidth="845.0" styleClass="custom-card" stylesheets="@style/card.css" visible="true">
      <children>
         <Label layoutX="2.0" layoutY="1.0" prefHeight="30.0" prefWidth="835.0" text="Panier" textFill="#2f2b6d">
            <font>
               <Font name="Century" size="23.0" />
            </font>
         </Label>
         <Label layoutX="14.0" layoutY="29.0" prefHeight="30.0" prefWidth="199.0" text="Liste des inscriptions" textFill="#f79125">
            <font>
               <Font name="Cambria Bold" size="13.0" />
            </font>
         </Label>
         <Line endX="716.2000732421875" endY="-7.62939453125E-6" layoutX="111.0" layoutY="67.0" startX="-100.0" stroke="#43a1f6" />
         <VBox fx:id="idListeInscription" layoutX="8.0" layoutY="69.0" prefHeight="534.0" prefWidth="823.0" style="-fx-background-color: ECECFE;">
            <children>
               <FlowPane fx:id="id_inscrit" prefHeight="537.0" prefWidth="823.0" style="-fx-background-color: D6D6FA;" />
            </children>
         </VBox>
